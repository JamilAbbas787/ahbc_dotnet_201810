

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form action="/Student/Create" method="post">
    <input type="hidden" name="StudentNumber" value="0" />
    <input type="text" name="LastName" placeholder="Last Name" /><br /><br />
    <input type="text" name="FirstName" placeholder="First Name" /><br /><br />
    <input type="text" name="MiddleName" placeholder="Middle Name" /><br /><br />
    Enrollment Date<input type="date" name="EnrollmentDate" /><br /><br />
    <input type="submit" class="btn-group" value="Add new student" />
</form>

@if (ViewBag.ErrorMessage != null)
{
    <p class="danger"> @ViewBag.ErrorMessage </p>
}